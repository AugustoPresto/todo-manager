<h2 class="display-2 m-3">What do I have to do?</h2>

<div class="list-group">
  <ul class="list-group list-group-flush">
    <% @tasks.each do |task| %>
      <li class="list-group-item p-3">
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>

        <%= link_to "#{task.title}", task_path(task) %> - <%= link_to task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
