<%= form_for(@task) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :details %>
  <%= form.text_field :details %>
  <% if task.persisted? %>
    <%= form.check_box :completed %>
    <%= form.label :completed, "Completed?" %>
  <% end %>
  <%= form.submit %>
<% end %>
